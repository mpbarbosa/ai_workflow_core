{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "AI Workflow: Full Run",
      "type": "shell",
      "command": "${workspaceFolder}/src/workflow/execute_tests_docs_workflow.sh",
      "args": ["--smart-execution", "--parallel"],
      "group": {"kind": "build", "isDefault": true},
      "presentation": {"reveal": "always", "panel": "dedicated"},
      "detail": "Run full AI workflow with optimizations"
    },
    {
      "label": "AI Workflow: Documentation Only",
      "type": "shell",
      "command": "${workspaceFolder}/templates/workflows/docs-only.sh",
      "group": "build",
      "detail": "Run documentation workflow (~3-4 min)"
    },
    {
      "label": "AI Workflow: Test Only",
      "type": "shell",
      "command": "${workspaceFolder}/templates/workflows/test-only.sh",
      "group": "build",
      "detail": "Run test workflow (~8-10 min)"
    },
    {
      "label": "AI Workflow: Feature Development",
      "type": "shell",
      "command": "${workspaceFolder}/templates/workflows/feature.sh",
      "group": "build",
      "detail": "Run full feature workflow (~15-20 min)"
    },
    {
      "label": "AI Workflow: Auto-commit",
      "type": "shell",
      "command": "${workspaceFolder}/src/workflow/execute_tests_docs_workflow.sh",
      "args": ["--smart-execution", "--parallel", "--auto-commit"],
      "group": "build",
      "detail": "Run workflow with auto-commit enabled"
    },
    {
      "label": "AI Workflow: Metrics Dashboard",
      "type": "shell",
      "command": "${workspaceFolder}/tools/metrics_dashboard.sh",
      "detail": "View workflow performance metrics"
    }
  ]
}
